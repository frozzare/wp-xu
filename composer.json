{
  "name": "wp-xu/framework",
  "license": "MIT",
  "description": "Collection of useful WordPress and PHP functions",
  "homepage": "https://github.com/wp-xu/framework",
  "authors": [
    {
      "name": "Fredrik Forsmo",
      "email": "fredrik.forsmo@gmail.com",
      "homepage": "https://github.com/frozzare"
    },
    {
      "name": "Johnie Hjelm",
      "email": "johnie@hjelm.im",
      "homepage": "http://github.com/johnie"
    }
  ],
  "keywords": [
    "wordpress",
    "plugin",
    "utilities"
  ],
  "support": {
    "issues": "https://github.com/wp-xu/framework/issues"
  },
  "autoload": {
    "files": [
      "autoload.php",
      "src/foundation/helpers.php",
      "src/lib/conditional.php",
      "src/lib/http.php",
      "src/lib/post.php",
      "src/lib/string.php",
      "src/lib/utils.php",
      "src/model/helpers.php"
    ]
  },
  "require": {
    "php": ">=5.4",
    "frozzare/tank": "~1.0",
    "frozzare/wp-autoload": "^2.0.0"
  },
  "require-dev": {
    "frozzare/wp-test-suite": "~1.0",
    "wp-coding-standards/wpcs": "dev-develop"
  },
  "scripts": {
    "post-install-cmd": "if [ -f vendor/bin/phpcs ]; then \"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs; fi",
    "post-update-cmd" : "if [ -f vendor/bin/phpcs ]; then \"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs; fi"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
